@page "/DetalleFactura/{FacturaId:int}"
@using facturas.Components.Data
@using FacturaModel = facturas.Components.Data.Facturas
@using ViajeModel = facturas.Components.Data.Viaje
@using Microsoft.AspNetCore.Components
@rendermode InteractiveServer

<style>
    :root {
        --taxi-verde: #3da53d;
    }

    .contenedor-detalle {
        border: 1px solid #ddd;
        border-top: 5px solid var(--taxi-verde);
        padding: 25px;
        background-color: #ffffff;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        border-radius: 5px;
    }

    .info-header {
        border-bottom: 2px solid #eee;
        margin-bottom: 15px;
        padding-bottom: 10px;
    }

    .tabla-registro {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .tabla-registro th, .tabla-registro td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .tabla-registro th {
            background-color: var(--taxi-verde);
            color: white;
            font-weight: bold;
        }

    .pie-tabla-detalle {
        font-weight: bold;
        text-align: right;
        padding: 10px 0;
        font-size: 1.2em;
        border-top: 2px solid var(--taxi-verde);
        margin-top: 10px;
    }

    .btn-simple {
        background-color: var(--taxi-verde);
        color: white;
        border: 1px solid #2e7d32;
        padding: 10px 20px;
        cursor: pointer;
        margin-top: 20px;
        border-radius: 4px;
        font-weight: bold;
    }
</style>

<h1>Detalle de Factura #@FacturaId</h1>

@if (factura == null)
{
    <p>Cargando detalles...</p>
}
else
{
    <div class="contenedor-detalle">
        <div class="info-header">
            <p><strong>Cliente:</strong> @factura.Cliente</p>
            <p><strong>Fecha:</strong> @factura.Fecha.ToShortDateString()</p>
        </div>

        <h3>Viajes Facturados</h3>

        <table class="tabla-registro">
            <thead>
                <tr>
                    <th style="width: 15%;">Tipo</th>
                    <th style="width: 35%;">Descripción</th>
                    <th style="width: 25%;">Folio</th>
                    <th style="width: 25%;">Monto</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var v in factura.Viajes)
                {
                    <tr>
                        <td style="font-weight:bold; color:#555;">@v.Tipo</td>
                        <td>@v.Descripcion</td>
                        <td>@v.Folio</td>
                        <td>@v.Monto.ToString("C2")</td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="pie-tabla-detalle">
            TOTAL: $@factura.Total.ToString("C2")
        </div>

        <button @onclick='() => Navegacion.NavigateTo("/ListaFacturas")' class="btn-simple">
            Volver
        </button>
    </div>
}

@code {
    [Parameter] public int FacturaId { get; set; }
    private FacturaModel factura;
    [Inject] public NavigationManager Navegacion { get; set; }
    [Inject] public ServicioFacturas ServicioFacturas { get; set; }

    protected override async Task OnInitializedAsync()
    {
        factura = await ServicioFacturas.ObtenerFacturaPorId(FacturaId);
    }
}