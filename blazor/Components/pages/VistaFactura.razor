@page "/Facturas"
@using facturas.Components.Data
@using FacturaModel = facturas.Components.Data.Facturas
@using ViajeModel = facturas.Components.Data.Viaje
@inject ServicioFacturas ServicioFacturas
@inject NavigationManager Navegacion
@rendermode InteractiveServer

<style>
    :root {
        --taxi-verde: #3da53d;
        --taxi-amarillo: #fdd835;
        --taxi-rojo: #d32f2f;
        --taxi-texto-oscuro: #333;
        --taxi-gris-claro: #f7f7f7;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: var(--taxi-gris-claro);
    }

    .seccion-baja {
        border: 1px solid #ddd;
        border-top: 5px solid var(--taxi-verde);
        padding: 20px;
        margin-bottom: 20px;
        background-color: #ffffff;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        border-radius: 5px;
    }

    .input-grupo {
        margin-bottom: 15px;
    }

    .campo-texto {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1em;
        box-sizing: border-box;
    }

    .tabla-registro {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .tabla-registro th, .tabla-registro td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .tabla-registro th {
            background-color: var(--taxi-verde);
            color: white;
            font-weight: bold;
        }

    .fila-articulos {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
        align-items: center;
        background-color: #f9f9f9;
        border: 1px solid #eee;
        padding: 10px;
        border-radius: 4px;
    }

    .btn-simple {
        background-color: var(--taxi-amarillo);
        color: var(--taxi-texto-oscuro);
        border: 1px solid #fbc02d;
        padding: 8px 12px;
        cursor: pointer;
        font-size: 0.9em;
        border-radius: 4px;
        font-weight: bold;
    }

    .btn-guardar {
        background-color: var(--taxi-verde);
        color: white;
        border: 1px solid #2e7d32;
        font-weight: bold;
    }

    .btn-navegacion {
        background-color: #007bff;
        color: white;
        border: none;
    }

        .btn-navegacion:hover {
            background-color: #0056b3;
        }

    .msg-error {
        color: var(--taxi-rojo);
        margin-top: 10px;
        border: 1px solid var(--taxi-rojo);
        background-color: #fff0f0;
        padding: 10px;
        font-size: 0.9em;
        border-radius: 4px;
    }

    .pie-tabla {
        font-weight: bold;
        text-align: right;
        padding: 10px 0;
        border-top: 2px solid var(--taxi-verde);
        margin-top: 5px;
        font-size: 1.1em;
    }
</style>

<h1>Portal de Facturación - Taxi LM</h1>

<div class="seccion-baja">
    <h3>Crear Nueva Factura</h3>

    <div class="input-grupo">
        <label style="display: block; font-weight: bold; margin-bottom: 5px;">Fecha:</label>
        <input type="date" @bind-value="nuevaFactura.Fecha" class="campo-texto" />
    </div>

    <div class="input-grupo">
        <label style="display: block; font-weight: bold; margin-bottom: 5px;">Cliente (Nombre o Razón Social):</label>
        <input @bind="nuevaFactura.Cliente" placeholder="Nombre de la persona o empresa" class="campo-texto" />
    </div>

    <h4 style="margin-top: 25px; border-bottom: 2px solid #eee; padding-bottom: 5px;">Viajes a Facturar</h4>

    <table class="tabla-registro">
        <thead>
            <tr>
                <th style="width: 40%;">Descripción</th>
                <th style="width: 30%;">Folio / Referencia</th>
                <th style="width: 30%;">Monto</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in viajesTemp)
            {
                <tr>
                    <td>@v.Descripcion</td>
                    <td>@v.Folio</td>
                    <td>@v.Monto.ToString("C2")</td>
                </tr>
            }
        </tbody>
    </table>

    @if (viajesTemp.Count > 0)
    {
        <div class="pie-tabla">
            TOTAL (Borrador): @viajesTemp.Sum(v => v.Subtotal).ToString("C2")
        </div>
    }

    <div style="margin-top: 10px; font-weight: bold;">Agregar nuevo viaje:</div>
    <div class="fila-articulos">
        <input placeholder="Descripción (Ej: Viaje App, Nota Manual)" @bind="nuevoViaje.Descripcion" class="campo-texto" style="flex: 2 1 200px;" />
        <input placeholder="Folio / Referencia" @bind="nuevoViaje.Folio" class="campo-texto" style="flex: 1 1 150px;" />
        <input type="number" step="0.01" placeholder="Monto" @bind="nuevoViaje.Monto" class="campo-texto" style="flex: 1 1 100px;" />
        <button @onclick="AgregarViajeTemp" class="btn-simple" style="flex: 1 1 100%;">Agregar Viaje</button>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensajeError))
    {
        <p class="msg-error">! @mensajeError</p>
    }

    <button @onclick="GuardarFactura" class="btn-simple btn-guardar" style="width: 100%; margin-top: 20px; padding: 10px;">GUARDAR FACTURA FINAL</button>
</div>

<hr style="border-top: 1px solid #ccc; margin: 25px 0;" />

<div style="text-align: center;">
    <button @onclick='() => Navegacion.NavigateTo("/ListaFacturas")' class="btn-simple btn-navegacion" style="padding: 10px 20px;">
        Ver Historial de Facturas Guardadas
    </button>
</div>


@code {
    private FacturaModel nuevaFactura = new() { Fecha = DateTime.Now.Date };
    private ViajeModel nuevoViaje = new();
    private List<ViajeModel> viajesTemp = new();
    private string mensajeError = string.Empty;

    private async Task GuardarFactura()
    {
        mensajeError = string.Empty;
        if (string.IsNullOrWhiteSpace(nuevaFactura.Cliente))
        {
            mensajeError = "El campo 'Cliente' es obligatorio.";
        }
        else if (viajesTemp.Count == 0)
        {
            mensajeError = "Debe agregar al menos un viaje a la factura.";
        }

        if (string.IsNullOrWhiteSpace(mensajeError))
        {
            try
            {
                nuevaFactura.Viajes = new List<ViajeModel>(viajesTemp);
                await ServicioFacturas.AgregarFactura(nuevaFactura);

                Navegacion.NavigateTo("/ListaFacturas");

                nuevaFactura = new FacturaModel() { Fecha = DateTime.Now.Date };
                nuevoViaje = new ViajeModel();
                viajesTemp = new List<ViajeModel>();
            }
            catch (Exception ex)
            {
                mensajeError = $"Ocurrió un error inesperado: {ex.Message}";
            }

            StateHasChanged();
        }
    }

    private void AgregarViajeTemp()
    {
        mensajeError = string.Empty;
        if (string.IsNullOrWhiteSpace(nuevoViaje.Descripcion) || nuevoViaje.Monto <= 0)
        {
            mensajeError = "Debe especificar una descripción y un monto (>0) para el viaje.";
        }
        else
        {
            viajesTemp.Add(new ViajeModel
            {
                Descripcion = nuevoViaje.Descripcion,
                Folio = nuevoViaje.Folio,
                Monto = nuevoViaje.Monto
            });
            nuevoViaje = new ViajeModel();
        }
    }
}