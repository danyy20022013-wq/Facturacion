@page "/Facturas"
@page "/Factura/{Id:int}"
@using facturas.Components.Data
@using FacturaModel = facturas.Components.Data.Facturas
@using ViajeModel = facturas.Components.Data.Viaje
@inject ServicioFacturas ServicioFacturas
@inject NavigationManager Navegacion
@rendermode InteractiveServer

<style>
    :root {
        --taxi-verde: #3da53d;
        --taxi-amarillo: #fdd835;
        --taxi-rojo: #d32f2f;
        --taxi-texto-oscuro: #333;
        --taxi-gris-claro: #f7f7f7;
    }

    body {
        font-family: Arial, sans-serif;
        background-color: var(--taxi-gris-claro);
    }

    .seccion-baja {
        border: 1px solid #ddd;
        border-top: 5px solid var(--taxi-verde);
        padding: 20px;
        margin-bottom: 20px;
        background-color: #ffffff;
        box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        border-radius: 5px;
    }

    .input-grupo {
        margin-bottom: 15px;
    }

    .campo-texto {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        font-size: 1em;
        box-sizing: border-box;
    }

    .tabla-registro {
        width: 100%;
        border-collapse: collapse;
        margin-top: 10px;
    }

        .tabla-registro th, .tabla-registro td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        .tabla-registro th {
            background-color: var(--taxi-verde);
            color: white;
            font-weight: bold;
        }

    .fila-articulos {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
        margin-top: 10px;
        align-items: center;
        background-color: #f9f9f9;
        border: 1px solid #eee;
        padding: 10px;
        border-radius: 4px;
    }

    .btn-simple {
        background-color: var(--taxi-amarillo);
        color: var(--taxi-texto-oscuro);
        border: 1px solid #fbc02d;
        padding: 8px 12px;
        cursor: pointer;
        font-size: 0.9em;
        border-radius: 4px;
        font-weight: bold;
    }

    .btn-guardar {
        background-color: var(--taxi-verde);
        color: white;
        border: 1px solid #2e7d32;
        font-weight: bold;
    }

    .msg-error {
        color: var(--taxi-rojo);
        margin-top: 10px;
        border: 1px solid var(--taxi-rojo);
        background-color: #fff0f0;
        padding: 10px;
        font-size: 0.9em;
        border-radius: 4px;
    }

    .pie-tabla {
        font-weight: bold;
        text-align: right;
        padding: 10px 0;
        border-top: 2px solid var(--taxi-verde);
        margin-top: 5px;
        font-size: 1.1em;
    }

    .campo-select {
        width: 100%;
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        background-color: white;
    }

    .btn-eliminar-item {
        background-color: #e57373;
        color: white;
        border: none;
        padding: 4px 8px;
        font-size: 0.8em;
        cursor: pointer;
        border-radius: 3px;
    }
</style>

<h1>@(Id.HasValue ? $"Editar Factura #{Id}" : "Crear Nueva Factura")</h1>

<div class="seccion-baja">
    <div class="input-grupo">
        <label style="display: block; font-weight: bold; margin-bottom: 5px;">Fecha:</label>
        <input type="date" @bind-value="facturaActual.Fecha" class="campo-texto" />
    </div>

    <div class="input-grupo">
        <label style="display: block; font-weight: bold; margin-bottom: 5px;">Cliente:</label>
        <input @bind="facturaActual.Cliente" placeholder="Nombre del cliente" class="campo-texto" />
    </div>

    <h4 style="margin-top: 25px; border-bottom: 2px solid #eee; padding-bottom: 5px;">Viajes</h4>

    <table class="tabla-registro">
        <thead>
            <tr>
                <th style="width: 15%;">Tipo</th>
                <th style="width: 30%;">Descripción</th>
                <th style="width: 25%;">Folio</th>
                <th style="width: 20%;">Monto</th>
                <th style="width: 10%;">Acción</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var v in viajesTemp)
            {
                <tr>
                    <td>@v.Tipo</td>
                    <td>@v.Descripcion</td>
                    <td>@v.Folio</td>
                    <td>@v.Monto.ToString("C2")</td>
                    <td style="text-align: center;">
                        <button @onclick="() => EliminarViajeTemp(v)" class="btn-eliminar-item">X</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    @if (viajesTemp.Count > 0)
    {
        <div class="pie-tabla">
            TOTAL: @viajesTemp.Sum(v => v.Subtotal).ToString("C2")
        </div>
    }

    <div style="margin-top: 15px; font-weight: bold; color: var(--taxi-texto-oscuro);">Agregar viaje:</div>
    <div class="fila-articulos">
        <select @bind="nuevoViaje.Tipo" class="campo-select" style="flex: 1 1 120px;">
            <option value="Local">Local</option>
            <option value="Foraneo">Foráneo</option>
            <option value="Compra">De Compras</option>
            <option value="Aeropuerto">Aeropuerto</option>
            <option value="Especial">Especial</option>
        </select>

        <input placeholder="Descripción" @bind="nuevoViaje.Descripcion" class="campo-texto" style="flex: 2 1 180px;" />
        <input placeholder="Folio" @bind="nuevoViaje.Folio" class="campo-texto" style="flex: 1 1 100px;" />
        <input type="number" step="0.01" placeholder="Monto" @bind="nuevoViaje.Monto" class="campo-texto" style="flex: 1 1 80px;" />

        <button @onclick="AgregarViajeTemp" class="btn-simple" style="flex: 1 1 100%;">+ Agregar</button>
    </div>

    @if (!string.IsNullOrWhiteSpace(mensajeError))
    {
        <p class="msg-error">! @mensajeError</p>
    }

    <button @onclick="GuardarFactura" class="btn-simple btn-guardar" style="width: 100%; margin-top: 20px; padding: 12px;">
        @(Id.HasValue ? "GUARDAR CAMBIOS" : "CREAR FACTURA")
    </button>
</div>

<div style="text-align: center; margin-top: 20px;">
    <button @onclick='() => Navegacion.NavigateTo("/ListaFacturas")' class="btn-simple" style="background-color: #007bff; color: white;">
        Volver al Historial
    </button>
</div>

@code {
    [Parameter]
    public int? Id { get; set; }

    private FacturaModel facturaActual = new() { Fecha = DateTime.Now.Date };
    private ViajeModel nuevoViaje = new() { Tipo = "Local" }; 
    private List<ViajeModel> viajesTemp = new();
    private string mensajeError = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
        {
           
            var f = await ServicioFacturas.ObtenerFacturaPorId(Id.Value);
            if (f != null)
            {
                facturaActual = f;
                
                viajesTemp = new List<ViajeModel>(f.Viajes);
            }
            else
            {
                mensajeError = "Factura no encontrada.";
            }
        }
    }

    private async Task GuardarFactura()
    {
        mensajeError = string.Empty;
        if (string.IsNullOrWhiteSpace(facturaActual.Cliente))
        {
            mensajeError = "El campo 'Cliente' es obligatorio.";
            return;
        }
        if (viajesTemp.Count == 0)
        {
            mensajeError = "Debe haber al menos un viaje.";
            return;
        }

        try
        {
            facturaActual.Viajes = new List<ViajeModel>(viajesTemp);

            if (Id.HasValue)
            {
               
                await ServicioFacturas.ActualizarFactura(facturaActual);
            }
            else
            {
             
                await ServicioFacturas.AgregarFactura(facturaActual);
            }

            Navegacion.NavigateTo("/ListaFacturas");
        }
        catch (Exception ex)
        {
            mensajeError = $"Error: {ex.Message}";
        }
    }

    private void AgregarViajeTemp()
    {
        if (nuevoViaje.Monto <= 0)
        {
            mensajeError = "El monto debe ser mayor a 0.";
            return;
        }

        viajesTemp.Add(new ViajeModel
        {
            Tipo = nuevoViaje.Tipo,
            Descripcion = nuevoViaje.Descripcion,
            Folio = nuevoViaje.Folio,
            Monto = nuevoViaje.Monto
        });

       
        string tipoPrevio = nuevoViaje.Tipo;
        nuevoViaje = new ViajeModel { Tipo = tipoPrevio };
        mensajeError = string.Empty;
    }

    private void EliminarViajeTemp(ViajeModel v)
    {
        viajesTemp.Remove(v);
    }
}