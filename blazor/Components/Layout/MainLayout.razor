@inherits LayoutComponentBase

<style>
    
    body {
        margin: 0;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        background-color: #f4f4f4;
    }

    .top-bar {
       
        background: linear-gradient(90deg, #3da53d 0%, #2e7d32 100%); 
        color: white;
        height: 70px; 
        padding: 0 30px; 
        
      
        display: flex; 
        justify-content: space-between; 
        align-items: center; 
        
        box-shadow: 0 4px 10px rgba(0,0,0,0.15); 
        position: sticky;
        top: 0;
        z-index: 100; 
    }

    .brand-logo {
        font-size: 1.5em;
        font-weight: bold;
        display: flex;
        align-items: center;
        gap: 10px;
        text-shadow: 1px 1px 2px rgba(0,0,0,0.2);
    }

    .nav-menu {
        display: flex;
        gap: 15px;
    }

    .nav-link-custom {
        color: white;
        text-decoration: none;
        font-weight: 600;
        font-size: 1rem;
        padding: 8px 16px;
        border-radius: 25px; 
        transition: all 0.3s ease;
        display: flex;
        align-items: center;
        gap: 8px;
        border: 1px solid transparent;
    }

    .nav-link-custom:hover {
        background-color: rgba(255, 255, 255, 0.2);
        border-color: rgba(255, 255, 255, 0.4);
        transform: translateY(-2px);
    }

    .main-content {
        padding: 30px;
        max-width: 1200px; 
        margin: 0 auto;
    }
</style>

<div class="top-bar">
    <div class="brand-logo">
        <span>🚖</span> <span>Taxi LM</span>
    </div>

    <div class="nav-menu">
        <a href="/ListaFacturas" class="nav-link-custom">
            📄 Facturas
        </a>
        <a href="/Reportes" class="nav-link-custom">
            📊 Estadísticas
        </a>
    </div>
</div>

<div class="main-content">
    @Body
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>